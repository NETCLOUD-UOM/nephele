metadata:
  name: my-vobject
spec:
  edgelayer:
    verticalscaling:
      cpuRequest: "200m"
      cpuLimit: "200m"
      memoryRequest: "512Mi"
      memoryLimit: "512Mi"
    horizontalscaling:
      minReplicas: 1
      maxReplicas: 5
  southboundControlPlane:
    protocols:
    - OpenFlow
  southboundDataPlane:
    protocols:
    - MQTT
  gateway:
    name: my-gateway
    tsnserverip: "192.168.1.100"
    tsnserverport: "5000"
  northbound:
    Orchestrator:
      url: "http://orchestrator.mydomain.com"
    cVo:
      url: "http://cvo.mydomain.com"
    Application:
      url: "http://app.mydomain.com"
