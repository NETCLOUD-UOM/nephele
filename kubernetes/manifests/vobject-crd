apiVersion: apiextensions.k8s.io/v1
kind: CustomResourceDefinition
metadata:
  name: vobjects.netcloud.uom.gr
spec:
  group: netcloud.uom.gr
  versions:
    - name: v1
      served: true
      storage: true
      additionalPrinterColumns:
        - name: TSNServerIP
          type: string
          jsonPath: .spec.gateway.tsnserverip
        - name: TSNServerPort
          type: string
          jsonPath: .spec.gateway.tsnserverport
        - name: NorthboundOrchestratorURL
          type: string
          jsonPath: .spec.northbound.Orchestrator.url
        - name: NorthboundcVoURL
          type: string
          jsonPath: .spec.northbound.cVo.url
        - name: NorthboundApplicationURL
          type: string
          jsonPath: .spec.northbound.Application.url
      schema:
        openAPIV3Schema:
          type: object
          properties:
            spec:
              type: object
              properties:
                edgelayer:
                  type: object
                  properties:
                    verticalscaling:
                      type: object
                      properties:
                        cpuRequest:
                          type: string
                          default: "100m"
                        cpuLimit:
                          type: string
                          default: "100m"
                        memoryRequest:
                          type: string
                          default: "256Mi"
                        memoryLimit:
                          type: string
                          default: "256Mi"
                      required:
                        - cpuRequest
                        - cpuLimit
                        - memoryRequest
                        - memoryLimit
                      additionalProperties: false
                    horizontalscaling:
                      type: object
                      properties:
                        minReplicas:
                          type: integer
                          default: 1
                        maxReplicas:
                          type: integer
                      required:
                        - minReplicas
                        - maxReplicas
                      additionalProperties: false
                  additionalProperties: false
                southboundControlPlane:
                  type: object
                  properties:
                    protocols:
                      type: array
                      items:
                        type: string
                      default: []
                      additionalItems: false
                  additionalProperties: false
                southboundDataPlane:
                  type: object
                  properties:
                    protocols:
                      type: array
                      items:
                        type: string
                      default: []
                      additionalItems: false
                  additionalProperties: false
                gateway:
                  type: object
                  properties:
                    name:
                      type: string
                      default: ""
                    tsnserverip:
                      type: string
                      default: ""
                    tsnserverport:
                      type: string
                      default: ""
                  additionalProperties: false
                northbound:
                  type: object
                  properties:
                    Orchestrator:
                      type: object
                      properties:
                        url:
                          type: string
                          default: ""
                      additionalProperties: false
                    cVo:
                      type: object
                      properties:
                        url:
                          type: string
                          default: ""
                      additionalProperties: false
                    Application:
                      type: object
                      properties:
                        url:
                          type: string
                          default: ""
                      additionalProperties: false
                  additionalProperties: false
  scope: Namespaced
  names:
    plural: vobjects
    singular: vobject
    kind: VObject
    shortNames:
    - vo
