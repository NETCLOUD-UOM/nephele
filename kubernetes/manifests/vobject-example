apiVersion: netcloud.uom.gr/v1
kind: VObject
metadata:
  name: example-vobject
spec:
  edgelayer:
    verticalscaling:
      cpuRequest: "100m"
      cpuLimit: "100m"
      memoryRequest: "256Mi"
      memoryLimit: "256Mi"
    horizontalscaling:
      minReplicas: 1
      maxReplicas: 3
  southboundControlPlane:
    protocols:
    - OpenFlow
  southboundDataPlane:
    protocols:
    - MQTT
  gateway:
    name: gateway-1
    tsnserverip: "10.0.0.1"
    tsnserverport: "5000"
  tsn:
    type: taprio
    trafficClass:
    - id: 0
      dscp: "0x00"
      gcl:
        interval: 200
    - id: 1
      dscp: "0x40"
      gcl:
        interval: 800
  northbound:
    Orchestrator:
      url: "https://orchestrator.example.com"
    cVo:
      url: "https://cvo.example.com"
    Application:
      url: "https://app.example.com"
